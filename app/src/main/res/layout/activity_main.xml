<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_level">

        <ImageView
            android:id="@+id/img_first"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_second"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintStart_toEndOf="@+id/img_first"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_third"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_first" />

        <ImageView
            android:id="@+id/img_fourth"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_row="0"
            android:layout_column="3"
            app:layout_constraintStart_toEndOf="@+id/img_third"
            app:layout_constraintTop_toBottomOf="@+id/img_second" />
    </GridLayout>



        <EditText
            android:layout_marginTop="24dp"
            android:id="@+id/edit_input"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:hint="@string/input_answer"
            android:textSize="35sp"
            android:textColorHint="@android:color/black"
            android:textColor="@android:color/holo_green_dark"
            app:layout_constraintTop_toBottomOf="@+id/grid_layout"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:layout_marginTop="24dp"
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:textSize="35sp"
        android:onClick="onClick"
        app:layout_constraintTop_toBottomOf="@+id/grid_layout"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>